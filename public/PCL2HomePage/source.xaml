			</StackPanel>
	
			<StackPanel Orientation="Horizontal" Margin="0,2,0,0">
				<TextBlock Text="Github：" />
				<local:MyTextButton Text="https://github.com/Pectics" EventType="打开网页" EventData="https://github.com/Pectics" ToolTip="点击打开Github" />
			</StackPanel>
		</StackPanel>
		<Image Width="100" Height="100" HorizontalAlignment="Center" Source="https://z3.ax1x.com/2021/11/28/onSdr6.png" Grid.Column="1" />
		<local:MyLoading Height="10" HorizontalAlignment="Center" Foreground="{DynamicResource ColorBrush1}" Grid.Column="1" />
	</Grid>
</Border>